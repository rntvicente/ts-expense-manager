{
  "compilerOptions": {
    "target": "es5",
    "allowJs": true,
    "module": "commonjs",
    "baseUrl": "./src",
    "paths": { "*": ["./src/*"] },
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "noImplicitAny": false
  },
  "include": ["src/**/*.ts", "test/**/*.spec.ts", "test/**/*.test.ts"],
  "exclude": ["node_modules", "dist"]
}
